# Update Homebrew and its formulae
update

# Upgrade all existing formulae
upgrade

# Install GNU core utilities (those that come with OS X are outdated)
# Change PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
# Change MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"
# install coreutils

# Install newest BASH version
# Add /usr/local/bin/bash at top of /etc/shells and use chsh to set it as default shell
install bash

# Development tools
install git
install git-flow
install erlang

# Image processing
install imagemagick

# Databases & caching
install mysql
install mongodb
install memcached
install redis

# Message queueing
install rabbitmq
